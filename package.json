{
  "name": "anyjob-platform",
  "version": "1.0.0",
  "description": "AnyJob Platform is a marketplace that connects customers with vendors offering various services. Built using the MERN stack (MongoDB, Express.js, React, Node.js), this platform allows users to browse services, connect with vendors, and manage their accounts seamlessly.",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev"
  },
  "keywords": [
    "marketplace",
    "freelance-services",
    "local-services",
    "online-jobs",
    "task-management",
    "service-provider",
    "service-discovery",
    "subscription-platform"
  ],
  "author": "Avishka Gihan",
  "license": "MIT",
  "dependencies": {
    "anyjob-platform": "file:",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "react-router": "^7.3.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  }
}
